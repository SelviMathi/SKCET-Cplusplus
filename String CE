1.
Sample Input 1: str1 = "abc?e" and str2 = "abde?"

Index	str1	str2	Comparison
0	    a	    a	    Same
1	    b	    b    	Same
2	    c	    d	    Different (min++, max++)
3	    ?	    e    	Different (max++, min remains)
4	    e	    ?	    Different (max++, min remains)
Output 1: 2 3

Sample Input 2 : str1 = "??a" and str2 = "xyz"

Index	str1	str2	Comparison
0	    ?	    x	    Different (max++, min remains)
1	    ?	    y	    Different (max++, min remains)
2	    a	    z	    Different (min++, max++)
Output 2: 1 3

#include<iostream>
#include<string>
using namespace std;
int main()
{
    string str1,str2;
    
    cin>>str1>>str2;
   int min=0,max=0,len=str1.length();
    for(int index=0;index<len;index++)
    {
        if(str1[index]=='?' || str2[index]=='?') 
        max++;
        else if(str1[index]!=str2[index])
       { 
           min++;
           max++;
           
       }
    }
      cout<<min<<" "<<max;
    return 0;
}

2. sample 
input 1  ababab
output 1  yes
input 2 abc
output 2 no
#include<iostream>
#include<string>
using namespace std;
int main()
{
    string str;
    bool value=true;
    getline(cin,str);
    int len=str.length();
    for(int index=1;index<len-1;index++)
    {
        if((str[index-1] != str[index]) && (str[index-1] != str[index+1]))
        value=false;
    }
      cout<<(value?"Yes":"No");
    return 0;
}


3.To upper case

Sample 
input
selvi
output
SELVI

#include<iostream>
using namespace std;
int main()
{
    string str;
    getline(cin,str);
    for(char &ch:str)
    {
        if(ch>='a' && ch<='z')
        ch-=32;
    }
    cout<<str;
    return 0;
}

4.Reverse a string
Sample
input
hello
output
olleh

#include<iostream>
#include<cstring>

using namespace std;

int main() 
{

    char str[100], temp;
    int size = 0, i = 0;
    cin.getline(str, 100);

    size = strlen(str) - 1;
    while (i < size) 
    {
        temp = str[i];
        str[i] = str[size];
        str[size] = temp;
        size--;
        i++;
    }
    cout<< str;

    return 0;
}
5. Wildcard matching
// You are using GCC

#include<iostream>
#include<string>
using namespace std;
int main()
{
    string str1,str2;
    bool value=true;
    cin>>str1>>str2;
   int len1=str1.length();
   int len2=str2.length();
   if(len1==len2)
   {
    for(int index=0;index<len1;index++)
    {
        if( str1[index]!=str2[index])
        {
            if(str1[index]!='?' && str2[index]!='?') 
            {
        value=false;
        break;
            }
        }
    }
   
      cout<<(value?"Yes":"No");
   }
   else
   cout<<"No";
   return 0;
}

