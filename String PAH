10.Delete vowel

#include <iostream>
#include <string>
using namespace std;
 void removeVowels(string str)
  {
      string result;
        for (char ch : str) {
             ch = tolower(ch);
        if (ch != 'a' && ch != 'e' && ch != 'i' && ch != 'o' && ch != 'u') {
            result += ch;
        }
    }
    cout<< result;
}

int main() {
    string input;
    getline(cin, input);
    removeVowels(input);

    return 0;
}


