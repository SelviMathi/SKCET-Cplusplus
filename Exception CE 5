1. Drivimg license
#include <bits/stdc++.h>       
using namespace std;
int main() {
    int age,score;
    cin>>age>>score;
    cout<<age<<" "<<score<<"\n";
    try {
    if(age<18)
    {
        throw(age);
    }
    else
    {
        try {
            if(score<40)
            {
                throw(score);
            }
        }
        catch(int e) {
            cout<<"You should get atleast 40 marks";
        }
        if(score>=40)
        {
            cout<<"Passed";   
        }
    }
    }
    catch (int e)
    {
        cout<<"Invalid age"<<"\n";
    }
}

2. Vowels from file
string a;
    getline(cin,a);
    fout<<a;
    fout.close();
    ifstream fin;
    fin.open("sample.txt");
    string str;
    getline(fin,str);
    int count=0;
    for(char c:str){
        if(c=='a' || c=='e' || c=='i' || c=='o' || c=='u' || 
            c=='A' || c=='E' || c=='I' || c=='O' || c=='U'){
                count++;
            }
    }
    cout<<"Number of vowels in file are "<<count;


3.sort from files
int n;
    cin>>n;
    int arr[n];
    ofstream fout;
    fout.open("sample.txt");
    for(int i=0;i<n;i++){
        cin>>arr[i];
        fout<<arr[i]<<endl;
    }
    fout.close();
    ifstream file;
    file.open("sample.txt");
    int sort[n];
     for(int i=0;i<n;i++){
        file>>sort[i];
    }
    for(int i=0;i<n-1;i++){
        for(int j=i+1;j<n;j++){
            if(sort[i]>sort[j]){
            int temp=sort[i];
            sort[i]=sort[j];
            sort[j]=temp;
            }
        }
    }
    for(int i=0;i<n;i++){
        cout<<sort[i]<<endl;
    }
